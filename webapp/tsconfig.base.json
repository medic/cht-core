/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2022",
    "module": "es2022",
    "lib": [
      "es2016",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@mm-actions/*": ["src/ts/actions/*"],
      "@mm-components/*": ["src/ts/components/*"],
      "@mm-directives/*": ["src/ts/directives/*"],
      "@mm-effects/*": ["src/ts/effects/*"],
      "@mm-environments/*": ["src/ts/environments/*"],
      "@mm-modals/*": ["src/ts/modals/*"],
      "@mm-modules/*": ["src/ts/modules/*"],
      "@mm-pipes/*": ["src/ts/pipes/*"],
      "@mm-providers/*": ["src/ts/providers/*"],
      "@mm-reducers/*": ["src/ts/reducers/*"],
      "@mm-selectors/*": ["src/ts/selectors/*"],
      "@mm-services/*": ["src/ts/services/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "preserveWhitespaces": true,
    "skipTemplateCodegen": false
  }
}
