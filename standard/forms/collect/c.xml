<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>New Child</h:title>
    <model>
      <itext>
        <translation lang="Bahasa Indonesia (Indonesian)">
          <text id="/c/birth_date:jr:constraintMsg">
            <value>-</value>
          </text>
          <text id="/c/birth_date:label">
            <value>Date of birth</value>
          </text>
          <text id="/c/n:hint">
            <value>Submitting this form will give you a Medic ID associated to this person</value>
          </text>
          <text id="/c/review:label">
            <value>Submitting new person report for <output value=" /c/n "/>, born <output value=" /c/birth_date "/> so <output value=" /c/d "/> days old, which is <output value=" /c/w "/> weeks old.</value>
          </text>
          <text id="/c/n:label">
            <value>Child's Name</value>
          </text>
          <text id="/c/w:label">
            <value>Weeks since birth</value>
          </text>
        </translation>
        <translation lang="हिन्दी (Hindi)">
          <text id="/c/birth_date:jr:constraintMsg">
            <value>-</value>
          </text>
          <text id="/c/birth_date:label">
            <value>Date of birth</value>
          </text>
          <text id="/c/n:hint">
            <value>Submitting this form will give you a Medic ID associated to this person</value>
          </text>
          <text id="/c/review:label">
            <value>Submitting new person report for <output value=" /c/n "/>, born <output value=" /c/birth_date "/> so <output value=" /c/d "/> days old, which is <output value=" /c/w "/> weeks old.</value>
          </text>
          <text id="/c/n:label">
            <value>Child's Name</value>
          </text>
          <text id="/c/w:label">
            <value>Weeks since birth</value>
          </text>
        </translation>
        <translation default="true()" lang="English">
          <text id="/c/birth_date:jr:constraintMsg">
            <value>Birth date cannot be in the future</value>
          </text>
          <text id="/c/birth_date:label">
            <value>Date of birth</value>
          </text>
          <text id="/c/n:hint">
            <value>Submitting this form will give you a Medic ID associated to this person</value>
          </text>
          <text id="/c/review:label">
            <value>Submitting new person report for <output value=" /c/n "/>, born <output value=" /c/birth_date "/> so <output value=" /c/d "/> days old, which is <output value=" /c/w "/> weeks old.</value>
          </text>
          <text id="/c/n:label">
            <value>Child's Name</value>
          </text>
          <text id="/c/w:label">
            <value>Weeks since birth</value>
          </text>
        </translation>
      </itext>
      <instance>
        <c delimiter="#" id="c" prefix="J1!c!" version="2017-09-12_20-43">
          <n/>
          <w/>
          <d/>
          <birth_date/>
          <review/>
          <meta>
            <instanceID/>
          </meta>
        </c>
      </instance>
      <bind nodeset="/c/n" required="true()" type="string"/>
      <bind calculate="round(  /c/d  div 7, 0 )" nodeset="/c/w" required="true()" type="string"/>
      <bind calculate="today() -  /c/birth_date " nodeset="/c/d" type="string"/>
      <bind constraint=". &lt;= today()" jr:constraintMsg="jr:itext('/c/birth_date:jr:constraintMsg')" nodeset="/c/birth_date" required="true()" type="date"/>
      <bind nodeset="/c/review" readonly="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/c/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <input ref="/c/n">
      <label ref="jr:itext('/c/n:label')"/>
      <hint ref="jr:itext('/c/n:hint')"/>
    </input>
    <input appearance="no-calendar" ref="/c/birth_date">
      <label ref="jr:itext('/c/birth_date:label')"/>
    </input>
    <input ref="/c/review">
      <label ref="jr:itext('/c/review:label')"/>
    </input>
  </h:body>
</h:html>
