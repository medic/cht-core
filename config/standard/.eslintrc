{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "max-len": "off",
    "no-var": "off",
    "indent": "off",
    "one-var-declaration-per-line": "off",
    "one-var": "off",
    "curly": "off",
    "no-prototype-builtins": "off",
    "quotes": ["error", "single", { "allowTemplateLiterals": true, "avoidEscape": true } ]
  },
  "globals": {
    "contact": true,
    "reports": true,
    "lineage": true,
    "Utils": true,
    "no-global-assign": true
  },
  "overrides": [
    {
      "files": [
        "**/*.json"
      ],
      "plugins": [
        "json"
      ]
    }
  ]
}