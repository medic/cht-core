{
  "env": {
    "es6": true,
    "node": true
  },
  "root": true,
  "parserOptions": {
    "ecmaVersion": 5
  },
  "extends": "eslint:recommended",
  "rules": {
    "eqeqeq": "error",
    "no-bitwise": "error",
    "no-buffer-constructor": "error",
    "no-caller": "error",
    "no-console": "off",
    "no-debugger": "off",
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true,
        "avoidEscape": true
      }
    ]
  },
  "globals": {
    "user": true,
    "Utils": true
  }
}
