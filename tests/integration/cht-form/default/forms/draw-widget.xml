<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:odk="http://www.opendatakit.org/xforms">
  <h:head>
    <h:title>Draw Widget</h:title>
    <model odk:xforms-version="1.0.0">
      <itext>
        <translation lang="en">
          <text id="/data/media_widgets:label">
            <value>Media input widgets</value>
          </text>
          <text id="/data/media_widgets/draw:label">
            <value>Draw widget</value>
          </text>
          <text id="/data/media_widgets/signature:label">
            <value>Signature widget</value>
          </text>
          <text id="/data/media_widgets/annotate:label">
            <value>Annotate image widget</value>
          </text>
        </translation>
      </itext>
      <instance>
        <data id="draw-widget" version="2024-06-07 00:00:00" prefix="J1!draw-widget!" delimiter="#">
          <media_widgets>
            <draw/>
            <signature/>
            <annotate/>
          </media_widgets>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <instance id="contact-summary"/>
      <instance id="user-contact-summary"/>
      <bind nodeset="/data/media_widgets/draw" type="binary"/>
      <bind nodeset="/data/media_widgets/signature" type="binary"/>
      <bind nodeset="/data/media_widgets/annotate" type="binary"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" jr:preload="uid"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/data/media_widgets">
      <label ref="jr:itext('/data/media_widgets:label')"/>
      <upload ref="/data/media_widgets/draw" mediatype="image/*" appearance="draw">
        <label ref="jr:itext('/data/media_widgets/draw:label')"/>
      </upload>
      <upload ref="/data/media_widgets/signature" mediatype="image/*" appearance="signature">
        <label ref="jr:itext('/data/media_widgets/signature:label')"/>
      </upload>
      <upload ref="/data/media_widgets/annotate" mediatype="image/*" appearance="annotate">
        <label ref="jr:itext('/data/media_widgets/annotate:label')"/>
      </upload>
    </group>
  </h:body>
</h:html>