<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:odk="http://www.opendatakit.org/xforms">
  <h:head>
    <h:title>File Upload</h:title>
    <model odk:xforms-version="1.0.0">
      <itext>
        <translation lang="en">
          <text id="/data/files:label">
            <value>Files</value>
          </text>
          <text id="/data/files/images/image:label">
            <value>Upload image</value>
          </text>
        </translation>
      </itext>
      <instance>
        <data id="file-upload" version="2024-06-07 00:00:00" prefix="J1!file-upload!" delimiter="#">
          <files>
            <images jr:template="">
              <image/>
            </images>
          </files>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <instance id="contact-summary"/>
      <instance id="user-contact-summary"/>
      <bind nodeset="/data/files/images/image" type="binary"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" jr:preload="uid"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/data/files">
      <label ref="jr:itext('/data/files:label')"/>
      <group ref="/data/files/images">
        <repeat nodeset="/data/files/images">
          <upload ref="/data/files/images/image" mediatype="image/*">
            <label ref="jr:itext('/data/files/images/image:label')"/>
          </upload>
        </repeat>
      </group>
    </group>
  </h:body>
</h:html>