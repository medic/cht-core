{
  "extends": "@medic",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "overrides": [
    {
      "extends": "@medic/eslint-config/test",
      "files": [
        "**/tests/**",
        "**/test/**"
      ]
    },
    {
      "files": [ "Gruntfile.js", "grunt/service-worker.js" ],
      "env": {
        "node": true
      }
    },
    {
      "files": [ "build/ddocs/medic/_attachments/js/service-worker.js" ],
      "rules": {
        "max-len": "off",
        "no-console": "off",
        "no-var": "off",
      }
    }
  ]
}
